<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= image_tag pin.image.url(:medium) %>
      <div class="panel-body center">
        <div class="text-box">
        <em><%= pin.description %></em><br/>
      </div>
        <%= link_to 'Details', pin_path(pin), class: 'btn btn-default' %>
        <%= link_to 'Compare', "#", class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>
